{
  "name": "lumi-extension",
  "version": "3.1.0",
  "type": "module",
  "scripts": {
    "prebuild": "node ../scripts/build-tokens.cjs",
    "build": "rollup -c",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "package": "npm run build && rm -f ../lumi-extension.zip && zip -r ../lumi-extension.zip background.js content.js manifest.json icons options.html options.css options.js popup.html popup.js"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.2",
    "@testing-library/dom": "^9.3.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "rollup": "^4.52.4"
  }
}
