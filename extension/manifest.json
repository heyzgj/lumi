{
  "manifest_version": 3,
  "name": "LUMI",
  "version": "3.0.0",
  "description": "Select a page region or element, describe your intent, and let a local AI (Codex/Claude) propose code changes via a localhost bridge.",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "options_page": "options.html",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://localhost/*",
    "http://127.0.0.1/*"
  ],
  "action": {
    "default_title": "LUMI - Select and Edit"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": []
}
